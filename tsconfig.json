{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "/",
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["webpack-env", "jest"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "packages/**/*"
  ],
  "exclude": ["node_modules", "src/**/*.js", "src/**/*.jsx"]
}
