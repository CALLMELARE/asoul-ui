{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "/",
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["components", "../../shims/*"],
  "exclude": ["node_modules"]
}
